@model BlogSystem.WebApp.Areas.Manager.Data.Seo.AddSeoViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">新增优化信息</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Add", "SeoManager", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Title">优化名称:</label>
                        @Html.TextBoxFor(r => r.Title, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("Title")</span>
                    </div>
                    <div class="form-group">
                        <label for="Keyword">优化关键字:</label>
                        @Html.TextBoxFor(r => r.Keyword, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("Keyword")</span>
                    </div>

                    <div class="form-group">
                        <label for="Description">优化描述:</label>
                        @Html.TextBoxFor(r => r.Description, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("Description")</span>
                    </div>

                    

                    <div class="form-group">
                        <label for="WebMenuId">优化网站菜单名称:</label>
                        @Html.DropDownList("WebMenuId", (SelectList)ViewBag.DropDownList, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("WebMenuId")</span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-success" type="submit">保存</button>
                        <button class="btn btn-danger" type="reset">重置</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

